<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guía de Personajes - La Tienda de Stephen King</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-900 text-gray-200 flex items-center justify-center min-h-screen p-4">

    <div class="w-full max-w-2xl mx-auto bg-gray-800 rounded-2xl shadow-2xl p-6 md:p-8 transform hover:scale-[1.01] transition-transform duration-300">
        
        <!-- Header Section -->
        <div class="text-center mb-8">
            <h1 class="text-3xl md:text-4xl font-bold text-white mb-2">Guía de Personajes</h1>
            <p class="text-lg md:text-xl text-red-400 font-semibold">La Tienda de Stephen King</p>
            <p class="text-gray-400 mt-2 max-w-md mx-auto">Escribe el nombre de un personaje para obtener una descripción libre de spoilers.</p>
        </div>

        <!-- Search Input -->
        <div class="relative mb-6">
            <input type="text" id="searchInput" placeholder="Buscar personaje (ej: Alan Pangborn)" class="w-full px-4 py-3 bg-gray-700 text-white border-2 border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-all duration-300 placeholder-gray-500">
             <svg class="absolute right-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
        </div>

        <!-- Results Area -->
        <div id="results" class="bg-gray-900/50 p-6 rounded-lg min-h-[150px] transition-all duration-300">
            <!-- Character description will be injected here -->
            <div id="initial-message" class="text-center text-gray-400">
                <p>Ingresa un nombre para comenzar o elige de la lista de abajo.</p>
            </div>
        </div>
        
        <!-- All Characters List -->
        <div class="mt-8">
            <h3 class="text-lg font-semibold text-white mb-4 text-center">Personajes Disponibles</h3>
            <div id="character-list" class="flex flex-wrap justify-center gap-2">
                <!-- Character buttons will be injected here -->
            </div>
        </div>

        <!-- Footer Credit -->
        <div class="text-center mt-8 pt-4 border-t border-gray-700/50">
            <p class="text-sm text-gray-500">Creada por Maxi Hawk</p>
        </div>

    </div>

    <script>
        const characters = {
            'leland gaunt': {
                name: 'Leland Gaunt',
                description: 'El enigmático propietario de la nueva tienda, "Cosas Necesarias". Un hombre encantador que parece tener exactamente lo que cada residente de Castle Rock desea.'
            },
            'alan pangborn': {
                name: 'Alan Pangborn',
                description: 'El sheriff de Castle Rock. Un hombre sensato y bueno que aún lidia con la pérdida de su familia. Se vuelve receloso de la nueva tienda y su propietario.'
            },
            'polly chalmers': {
                name: 'Polly Chalmers',
                description: 'La dueña de una tienda de costura local, "Tú Coserás". Mantiene una relación con Alan Pangborn y sufre de una dolorosa artritis en las manos.'
            },
            'norris ridgewick': {
                name: 'Norris Ridgewick',
                description: 'Un leal ayudante del sheriff Pangborn. Ha vivido en Castle Rock toda su vida y conoce bien a sus habitantes.'
            },
            'danforth keeton': {
                name: "Danforth 'Buster' Keeton",
                description: 'El concejal principal del pueblo, un hombre con un temperamento explosivo, problemas de deudas y una creciente paranoia.'
            },
            'buster keeton': {
                name: "Danforth 'Buster' Keeton",
                description: 'El concejal principal del pueblo, un hombre con un temperamento explosivo, problemas de deudas y una creciente paranoia.'
            },
            'brian rusk': {
                name: 'Brian Rusk',
                description: 'Un niño de once años que se convierte en uno de los primeros y más entusiastas clientes de "Cosas Necesarias".'
            },
            'nettie cobb': {
                name: 'Nettie Cobb',
                description: 'El ama de llaves y amiga de Polly Chalmers. Tiene un pasado difícil y una amarga y larga enemistad con Wilma Jerzyck.'
            },
            'wilma jerzyck': {
                name: 'Wilma Jerzyck',
                description: 'Una residente de Castle Rock conocida por su mal genio y su naturaleza conflictiva. Enemiga jurada de Nettie Cobb.'
            },
            'ace merrill': {
                name: 'Ace Merrill',
                description: 'Un criminal local que regresa a Castle Rock después de cumplir una condena. Es conocido por ser una mala influencia y buscar problemas.'
            },
            'hugh priest': {
                name: 'Hugh Priest',
                description: 'El borracho del pueblo, a menudo encontrado causando problemas o metido en peleas.'
            },
            'padre meehan': {
                name: 'Padre Meehan',
                description: 'El sacerdote de la iglesia católica del pueblo, que mantiene una fuerte rivalidad con el reverendo bautista.'
            },
            'reverendo willie rose': {
                name: 'Reverendo Willie Rose',
                description: 'El pastor de la iglesia bautista. Existe una fuerte rivalidad entre él y el Padre Meehan.'
            }
        };

        const searchInput = document.getElementById('searchInput');
        const resultsDiv = document.getElementById('results');
        const initialMessage = document.getElementById('initial-message');
        const characterListDiv = document.getElementById('character-list');

        // Function to display character info
        function displayCharacter(character) {
            initialMessage.style.display = 'none';
            resultsDiv.innerHTML = `
                <h2 class="text-2xl font-bold text-red-400 mb-2">${character.name}</h2>
                <p class="text-gray-300 text-base">${character.description}</p>
            `;
        }
        
        // Function to clear results
        function clearResults() {
             resultsDiv.innerHTML = '';
             initialMessage.style.display = 'block';
        }

        // Search functionality
        searchInput.addEventListener('input', (e) => {
            const query = e.target.value.toLowerCase().trim();
            if (!query) {
                clearResults();
                return;
            }

            const foundCharacterKey = Object.keys(characters).find(key => key.includes(query));

            if (foundCharacterKey) {
                displayCharacter(characters[foundCharacterKey]);
            } else {
                initialMessage.style.display = 'none';
                resultsDiv.innerHTML = `<p class="text-center text-yellow-400">Personaje no encontrado. Intenta con otro nombre.</p>`;
            }
        });
        
        // Populate character list and add click listeners
        const uniqueCharacters = {};
        Object.values(characters).forEach(char => {
            if (!uniqueCharacters[char.name]) {
                uniqueCharacters[char.name] = char;
            }
        });
        
        Object.values(uniqueCharacters).sort((a,b) => a.name.localeCompare(b.name)).forEach(character => {
            const button = document.createElement('button');
            button.className = "px-3 py-1 bg-gray-700 text-gray-300 rounded-full text-sm hover:bg-red-500 hover:text-white transition-colors duration-200";
            button.textContent = character.name;
            button.onclick = () => {
                searchInput.value = character.name;
                displayCharacter(character);
                searchInput.focus();
            };
            characterListDiv.appendChild(button);
        });

    </script>
</body>
</html>

